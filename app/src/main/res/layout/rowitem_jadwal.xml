<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#055C9D"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cinema_class"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Cinema Class"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_room_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Code"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_showtimes"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Showtimes"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#055C9D"/>

                <TextView
                    android:id="@+id/tv_ticket_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ticket Price"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#055C9D"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>