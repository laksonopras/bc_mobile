<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_riwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_bookingCode"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Kode Pemesanan : "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_randomCode"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="RC25SOT"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <View
                android:id="@+id/hr1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_movie_title1"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Movie Title"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_showtimes1"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Showtimes"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_cinema_class1"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Cinema Class"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_room_code1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Code"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <View
                android:id="@+id/hr2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_total"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Total Pemesanan"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp100.000"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>